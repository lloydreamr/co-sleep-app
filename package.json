{
  "name": "co-sleep-app",
  "version": "1.0.0",
  "description": "A WebRTC-based co-sleeping app for finding quiet presence",
  "main": "server.js",
  "scripts": {
    "start": "npm run db:deploy && node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma db push --accept-data-loss",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:e2e": "NODE_ENV=test jest tests/e2e"
  },
  "keywords": [
    "webrtc",
    "sleep",
    "audio",
    "realtime",
    "socket.io"
  ],
  "author": "Co-Sleep Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.7.1",
    "socket.io": "^4.7.4",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "lib/**/*.js",
      "services/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
